###SECURITY GROUP 22,80,8080#######

resource "aws_security_group" "http-ssh-jenkins" {
  name        = "allow_http_ssh_jenkins"
  description = "Allow_htp_ssh_jenkins"
  vpc_id      = aws_vpc.prj3_mahi.id

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 8080
    to_port     = 8080
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }


  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }


  tags = {
    Name = "http_ssh_jenkins"
  }
}
